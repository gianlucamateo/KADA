<Window x:Class="KADA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KADA" Height="662" Width="2072" Loaded="WindowLoaded" Closing="WindowClosing">
  
    <Grid Name="layoutGrid" Margin ="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Viewbox Stretch="None" HorizontalAlignment="Left">
            <Image Name="Image" Width="640" Height="480"/>
        </Viewbox>
        <Viewbox Stretch="None" HorizontalAlignment="Center">
            <Image Name="Combined" Width="640" Height="480"/>
        </Viewbox>
        <Viewbox Stretch="None" HorizontalAlignment="Right">
            <Image Name="Depth" Width="640" Height="480"/>
        </Viewbox>
        
    </Grid>

            

    


</Window>
